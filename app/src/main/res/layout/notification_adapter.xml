<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:id="@+id/layoutparent"
        android:background="@drawable/rectangle_white_all_corners"
        android:orientation="vertical">


    <View
            android:layout_width="8dp"
            android:id="@+id/notificationView"
            android:visibility="invisible"
            android:background="@drawable/notification_rectangle"
            android:layout_height="100dp"/>
    <View
            android:layout_width="8dp"
            android:id="@+id/notificationView2"
            android:visibility="visible"
            android:layout_height="100dp"/>
    <TextView
            android:id="@+id/notificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/notificationView2"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginLeft="14dp"
            android:text="fdjfgd"
            android:layout_marginRight="14dp"
            android:textColor="@color/hard_grey"
            android:textSize="16dp" />

    <TextView
            android:id="@+id/txtOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notificationText"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:singleLine="true"
            android:layout_toRightOf="@+id/notificationView2"
            android:layout_marginLeft="14dp"
            android:text="5 days ago"
            android:layout_marginBottom="10dp"
            android:textColor="@color/medium_grey"
            android:textSize="16dp" />

</RelativeLayout>