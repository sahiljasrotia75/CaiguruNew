<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/shoptext_bg"
            android:layout_height="wrap_content">



        <TextView
                android:id="@+id/shopListname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Post shopping List"
                android:textColor="@color/purple"
                android:textSize="14dp" />

        <TextView
                android:id="@+id/bestquotetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:layout_below="@+id/shopListname"
                android:fontFamily="@font/montserrat_medium"
                android:text="Best Quote:"
                android:textColor="@color/hard_grey"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivShop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ivShop"
                app:layout_constraintTop_toTopOf="@+id/ivShop" />
        <TextView
                android:id="@+id/bestquote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/shopListname"
               android:layout_toRightOf="@+id/bestquotetext"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/QUOTE_PENDING"
                android:textColor="@color/hard_grey"
                android:textSize="12dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivShop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ivShop"
                app:layout_constraintTop_toTopOf="@+id/ivShop" />


        <ImageView
                android:id="@+id/ivNext"
                android:layout_width="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_arrow_shopping_lst"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginBottom="16dp"/>



    </RelativeLayout>
</layout>