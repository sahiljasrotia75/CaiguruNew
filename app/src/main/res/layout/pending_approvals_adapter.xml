<!--            android:layout_toRightOf="@+id/textnames"-->
<!--            android:fontFamily="@font/montserrat_medium"-->
<!--            android:text="Reputation:"-->
<!--            android:textColor="@color/medium_grey"-->
<!--            android:textSize="16dp" />-->

    <TextView
            android:id="@+id/timeAgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textnames"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/relativeImage"
            android:fontFamily="@font/montserrat_regular"
            android:text="20 minute ago"
            android:layout_marginBottom="16dp"
            android:textColor="@color/hard_grey"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

    <ImageView
            android:id="@+id/dot"
            android:layout_width="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp"
            android:layout_height="6dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle__fill_purple"/>
</RelativeLayout>