<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/Imagehistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_history_products" />

    <ImageView
            android:id="@+id/imageHistory2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtSearch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtSearch"
            app:srcCompat="@drawable/ic_arrow_search_products" />

    <TextView
            android:id="@+id/txtSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="start"
            android:text="TextView"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="@color/hard_grey"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/Imagehistory"
            app:layout_constraintEnd_toStartOf="@+id/imageHistory2"
            app:layout_constraintStart_toEndOf="@+id/Imagehistory"
            app:layout_constraintTop_toTopOf="@+id/Imagehistory" />

    <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/light_grey"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/imageHistory2"
            app:layout_constraintStart_toStartOf="@+id/Imagehistory"
            app:layout_constraintTop_toBottomOf="@+id/txtSearch" />

</androidx.constraintlayout.widget.ConstraintLayout>