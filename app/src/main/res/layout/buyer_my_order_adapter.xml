<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/rectangle_white_all_corners"
        android:orientation="vertical">

    <TextView
            android:id="@+id/ShoppingListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_medium"
            android:singleLine="true"
            android:layout_marginStart="8dp"
            android:text="fdjfgd"
            android:textColor="@color/purple"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

    <TextView
            android:id="@+id/txtOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ShoppingListName"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:singleLine="true"
            android:layout_marginStart="8dp"
            android:text="fdjfgd"
            android:textColor="@color/medium_grey"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

    <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/txtOrder"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/Status"
            android:textColor="@color/hard_grey"
            android:textSize="14sp" />

    <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/txtOrder"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/txtStatus"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="fdjfgd"
            android:textColor="@color/hard_grey"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

    <ImageView
            android:id="@+id/ivNext"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_arrow_shopping_lst" />

</RelativeLayout>