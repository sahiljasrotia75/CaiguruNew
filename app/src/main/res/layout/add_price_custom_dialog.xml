<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/productheading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/Set_Price"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="16sp" />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img"
                        android:layout_width="60dp"
                        android:background="@drawable/circle_background_white"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:padding="2dp"
                        android:src="@drawable/ic_product_img" />

                <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressdialog"
                        android:visibility="invisible"
                        android:layout_centerInParent="true"/>

            </RelativeLayout>
            <TextView
                    android:id="@+id/txtupdateimg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/Upload_photo"
                    android:gravity="center"
                    android:textColor="@color/hard_grey"
                    android:textSize="14sp" />


            <EditText
                    android:id="@+id/edtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/Enter_your_Price"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:inputType="numberDecimal"
                    android:textColor="@color/hard_grey"
                    android:textSize="16sp" />
            <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/light_grey" />

            <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="12sp"
                    android:id="@+id/PriceIncludedText"
                    android:visibility="gone"
                    android:textColor="@color/hard_grey"
                    android:text="@string/the_commission_will_be_added_in_the_price_you_entered"
                    android:layout_height="wrap_content"/>
            <Button
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_curve_loginbutton"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/Add"
                    android:textAllCaps="false"
                    android:id="@+id/btnAddPrice"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/purple"
                    android:layout_marginBottom="22dp"
                    android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
